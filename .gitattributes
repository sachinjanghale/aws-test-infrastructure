# Auto detect text files and perform LF normalization
* text=auto

# Terraform files
*.tf text eol=lf
*.tfvars text eol=lf
*.hcl text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# JSON files
*.json text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.7z binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
.kiro/ export-ignore
